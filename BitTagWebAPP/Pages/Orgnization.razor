<div class="container container-fluid mt-5">
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4>Register your Organization</h4>
            <EditForm Model="OrgModel" OnSubmit="SaveOrganization">
                <div class="form-group input-group mb-1 mt-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="oi oi-account-login"></i> </span>
                    </div>
                    <input class="form-control" placeholder="Organization Name" type="text" @bind-value="OrgModel.orgName" required>
                </div> <!-- form-group// -->
                <div class="form-group input-group mb-1">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="oi oi-account-login"></i> </span>
                    </div>
                    <input class="form-control" placeholder="Organization's Type" type="text" @bind-value="OrgModel.orgType" required>
                </div> <!-- form-group// -->
                <div class="form-group input-group mb-1">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="oi oi-dashboard"></i> </span>
                    </div>
                    <input class="form-control" placeholder="Organization's Address" @bind-value="OrgModel.orgAddress" type="text" required>
                </div>
                <div class="form-group input-group mb-1">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="oi oi-dashboard"></i> </span>
                    </div>
                    <input class="form-control" placeholder="Organization's Capacity" type="number" @bind-value="OrgModel.orgCapacity" required>
                </div>

                <div class="form-group" style="display:flex; justify-content:center;">
                    <button type="submit" class="btn btn-primary btn-block"> Register  </button>
                </div> <!-- form-group// -->
            </EditForm>
        </article>
    </div> <!-- card.// -->

</div>

<section class="intro">
    <div class="gradient-custom-1 h-100">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="table-responsive bg-white">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th scope="col">ORGANIZATION</th>
                                        <th scope="col">TYPE</th>
                                        <th scope="col">ADDRESS</th>
                                        <th scope="col">QTY</th>
                                        <th scope="col">ACTION</th>
                                        <th scope="col">MORE</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in organizationList)
                                    {
                                        <tr>
                                            <td>@item.orgName</td>
                                            <td>@item.orgType</td>
                                            <td>@item.orgAddress</td>
                                            <td>@item.orgCapacity</td>
                                            <td>
                                                <button @onclick="(()=>DeleteOrganization(item.orgID))">Delete</button>
                                            </td>
                                            <td>
                                                <button><a href="orgEmployees/@item.orgID.ToString()">Add Employee</a></button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@code {
    OrganizationModel OrgModel = new OrganizationModel();
    List<OrganizationModel> organizationList = new List<OrganizationModel>();
    private async void SaveOrganization()
    {
        Guid id = Guid.NewGuid();
        OrgModel.orgID = id;
        await Orgs.SaveOrganizations(OrgModel);
        await LoadData();

    }

    protected override async Task OnInitializedAsync()
    {
       await LoadData();
    }
    private async void DeleteOrganization(Guid id)
    {
        await Orgs.DeleteOrganizations(id);
    }

    private async Task LoadData()
    {
        organizationList = await Orgs.GetOrganizations();
    }
}
