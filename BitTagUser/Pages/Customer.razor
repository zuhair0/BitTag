<div class="container container-fluid mt-5">
    <div class="card bg-white">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="text-center fw-bold">Basic Information</h4>
            <EditForm Model="customers" OnSubmit="SaveCustomer">
                <div class="form-group input-group mb-1 mt-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="oi oi-person"></i> </span>
                    </div>
                    <input class="form-control" placeholder="First Name" type="text" @bind-value="customers.firstName" required>
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="oi oi-person"></i> </span>
                    </div>
                    <input class="form-control" placeholder="Last Name" type="text" @bind-value="customers.lastName" required>
                </div> <!-- form-group// -->
                <div class="form-group input-group mb-1">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="oi oi-book"></i> </span>
                    </div>
                    <input class="form-control" placeholder="C-NIC" type="text" @bind-value="customers.custCNIC" required>
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="oi oi-book"></i> </span>
                    </div>
                    <input class="form-control" placeholder="Contact" type="text" @bind-value="customers.contact" required>
                </div> <!-- form-group// -->
                <div class="form-group input-group mb-1">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="oi oi-box"></i> </span>
                    </div>
                    <input class="form-control" placeholder="Email Address" type="text" @bind-value="customers.custEmail" required>
                </div>
                <div class="form-group input-group mb-1">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> DOB </span>
                    </div>
                    <input class="form-control" placeholder="DOB" @bind-value="customers.DOB" type="date" required>
                    <div class="input-group-prepend">
                        <span class="input-group-text"> PIN </span>
                    </div>
                    <input class="form-control" placeholder="PIN" @bind-value="customers.custPIN" type="number" min="0000" max="9999" required>
                </div>

                <div class="form-group" style="display:flex; justify-content:center;">
                    <button type="submit" class="btn btn-primary btn-block"> Register  </button>
                </div> <!-- form-group// -->
            </EditForm>
        </article>
    </div> <!-- card.// -->

</div>

