    <div class="flex justify-center py-12 bg-[#014040] min-h-screen">
        <div class="w-full max-w-4xl px-8 py-10 bg-[#036666] rounded-lg shadow-lg">
            <h2 class="text-3xl font-bold text-white mb-6">Add Vehicle</h2>
            <EditForm Model="vehicle" OnSubmit="SaveVehicle" class="grid grid-cols-2 gap-x-8 gap-y-6">
                <div>
                    <label for="vehicle-make" class="block mb-2 text-sm font-medium text-gray-300">
                        Vehicle Make: *
                    </label>
                    <select required class="flex h-10 w-full rounded-md border border-input px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 bg-gray-800 text-white border-none"
                            id="vehicle-make" @bind="selected">
                        @foreach (var item in make)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                </div>
                <div>
                    <label for="vehicle-model" class="block mb-2 text-sm font-medium text-gray-300">
                        Vehicle Model: *
                    </label>
                    <select required class="flex h-10 w-full rounded-md border border-input px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 bg-gray-800 text-white border-none"
                            id="vehicle-model" @bind="modelSelect">
                        @foreach (var item in model)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>

                </div>
                <div>
                    <label for="plate" class="block mb-2 text-sm font-medium text-gray-300">
                        Plate: *
                    </label>
                    <input required class="flex h-10 w-full rounded-md border border-input px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 bg-gray-800 text-white border-none"
                           id="plate"
                           placeholder="RX901" 
                           @bind-value="vehicle.vehiclePlate"/>
                </div>
                <div>
                    <label for="transmission" class="block mb-2 text-sm font-medium text-gray-300">
                        Transmission: *
                    </label>
                    <select required class="flex h-10 w-full rounded-md border border-input px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 bg-gray-800 text-white border-none"
                            id="transmission"
                    @bind="transmissionSelect">
                        @foreach (var item in trm)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                </div>
                <div>
                    <label for="color" class="block mb-2 text-sm font-medium text-gray-300">
                        Color: *
                    </label>
                    <select required class="flex h-10 w-full rounded-md border border-input px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 bg-gray-800 text-white border-none"
                            id="color" @bind="colorSelect">
                        @foreach (var item in clr)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                </div>
                <div class="col-span-2">
                    <button type="submit" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-primary/90 h-10 px-4 py-2 w-full bg-[#028282] text-white">
                        Add Vehicle
                    </button>

                </div>
                <p>@msg</p>
            </EditForm>
        </div>
    </div>

</div>





@code {
    [Parameter]
    public string custID_FK { get; set; }
    VehicleModel vehicle = new VehicleModel();
    List<VehicleModel> vehicleList = new List<VehicleModel>();
    private string msg;
    private int modelSelect { get; set; }
    List<int> model = new List<int>
{
    1990, 1991, 1992, 1993, 1994, 1995, 1996, 1997, 1998, 1999,
    2000, 2001, 2002, 2003, 2004, 2005, 2006, 2007, 2008, 2009,
    2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019,
    2020, 2021, 2022, 2023, 2024
};


    private string selected{ get; set; }
    List<string> make = new List<string>
    {
        "Suzuki","Honda","Toyota","Hyundai","Tesla","Daihatsu","Mitsubishi","Lamborghini","Porsche","MG","Others"
    };

    private string transmissionSelect { get; set; }
    List<string> trm = new List<string>
    {
        "Automatic","Manual"
    };
    private string colorSelect { get; set; }
    List<string> clr = new List<string>
{
    "White", "Black", "Silver", "Red", "Blue", "Gray", "Green", "Brown", "Yellow",
    "Orange", "Beige", "Gold", "Purple", "Pink", "Turquoise", "Maroon", "Magenta",
    "Teal", "Charcoal", "Coral Blue"
};


    //string userid = "3fa85f64-5717-4562-b3fc-2c963f66afad";
    private async void SaveVehicle()
    {
        Guid id = Guid.NewGuid();
        vehicle.tagID = id;
        vehicle.custID_FK = Guid.Parse(custID_FK);
        vehicle.vehicleID = Guid.NewGuid();
        vehicle.vehicleMake = selected;
        vehicle.vehicleModel = modelSelect;
        vehicle.vehicleType = transmissionSelect;
        vehicle.vehicleColor = colorSelect;
        await veh.SaveVehicle(vehicle);
        msg = "Data Added Successfully";
        nm.NavigateTo("/custWorkInfo/"+custID_FK+"/"+vehicle.vehicleID);
    }
    private async Task DeleteVehicle(Guid id)
    {
        await veh.DeleteVehicle(id);
    }
    private async Task LoadData()
    {
        vehicleList = await veh.GetVehicleModels();
    }
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

}
